<!doctype html>
<html>
<head>
    <title>Create Carpet Kit Item</title>
</head>
<body>
    <h1>Create Carpet Kit Item</h1>
    <form action="/carpet-kit-item" method="POST" enctype="multipart/form-data">
        <label for="category">Category:</label><br>
        <select id="category" name="category" disabled>
            <% carpetCategories.forEach(category => { %>
                <% if(category.name === 'Kit') { %>
                    <option value="<%= category._id %>" selected><%= category.name %></option>
                <% } else { %>
                    <option value="<%= category._id %>"><%= category.name %></option>
                <% } %>
            <% }) %>
        </select>
        <br><br>
        <label for="length">Length:</label><br>
        <input type="text" id="length" name="length" required>
        <br><br>
        <label for="breadth">Breadth:</label><br>
        <input type="text" id="breadth" name="breadth" required>
        <br><br>
        <label for="weight">Weight:</label><br>
        <input type="text" id="weight" name="weight" required>
        <br><br>
        <label for="dimensions">Dimensions:</label><br>
        <input type="text" id="dimensions" name="dimensions" required>
        <br><br>
        <label for="images">Images:</label><br>
        <input type="file" id="images" name="images" multiple required>
        <br><br>
        <label for="size">Size:</label><br>
        <select id="size" name="size" required>
            <option value="XS">XS</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
        </select>   
        <br><br>
        <label for="numericSize">Numeric Size:</label><br>
        <input type="number" id="numericSize" name="numericSize" required>
        <br><br>
        <label for="quantity">Quantity:</label><br>
        <input type="number" id="quantity" name="quantity" required>
        <br><br>
        <label for="countryOfOrigin">Country of Origin:</label><br>
        <select id="countryOfOrigin" name="countryOfOrigin" required>
            <option value="Australia">Australia</option>
            <option value="China">China</option>
            <option value="Japan">Japan</option>
            <option value="Iran">Iran</option>
            <option value="India">India</option>
        </select>    
        <br><br>
        <button type="submit">Create</button>
    </form>
</body>
</html>
